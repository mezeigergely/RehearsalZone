@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post">
        <label>Name</label>
        <input type="text" name="name" />
        <label>Password</label>
        <input type="password" name="password" />
        <button>Login</button>
    </form>
</div>

<p>Don't have an account? <i><a asp-area="" asp-controller="User" asp-action="Register">Register Now!</a></i></p>
